<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="button_activity">
        <item name="android:layout_width">@dimen/button_activity_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_activity_margin_top</item>
    </style>

    <dimen name="button_activity_width">400dp</dimen>
</resources>
